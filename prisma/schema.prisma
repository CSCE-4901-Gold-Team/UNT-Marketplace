// -------- Generators & Datasources --------

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// -------- Core Auth/Identity --------

model User {
    id            String     @id
    email         String     @unique
    name          String
    emailVerified Boolean    @default(false)
    image         String?
    createdAt     DateTime   @default(now())
    updatedAt     DateTime   @default(now()) @updatedAt
    sessions      Session[]
    accounts      Account[]
    listings      Listing[]
    roles         UserRole[]

    @@map("user")
}

enum UserRole {
    ADMIN
    STUDENT
    FACULTY
}

// -------- Marketplace --------

model Listing {
    id              String        @id @default(cuid())
    ownerId         String
    title           String
    description     String
    price           Decimal       @db.Decimal(10, 2)
    isProfessorOnly Boolean       @default(false)
    createdAt       DateTime      @default(now())
    updatedAt       DateTime      @default(now()) @updatedAt
    listingStatus   ListingStatus @default(AVAILABLE)

    // Relations
    owner      User       @relation(fields: [ownerId], references: [id])
    images     Image[]
    categories Category[]
}

enum ListingStatus {
    AVAILABLE
    DRAFT
    SOLD
    ARCHIVED
}

model Image {
    id        Int       @id @default(autoincrement())
    url       String
    listingId String
    sortOrder Int       @default(0)
    listing   Listing   @relation(fields: [listingId], references: [id])
    imageType ImageType
}

enum ImageType {
    LISTING
    PROFILE
}

model Category {
    id       Int       @id @default(autoincrement())
    name     String    @unique
    slug     String    @unique
    listings Listing[]
}

